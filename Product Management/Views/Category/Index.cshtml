@using Product_Management.Models
@{
    ViewData["Title"] = "Category List";

    
    var categories = ViewBag.Categories as List<Category>;
    var current = (int)ViewBag.CurrentPage;
    var pageSize = (int)ViewBag.PageSize;
    var totalCount = (int)ViewBag.TotalCount;
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<h2 class="text-center">Category List</h2>


    <a asp-action="Create" class="btn btn-success mb-3 ms-md-3 mx-auto">+ New Category</a>



<table class="table table-striped w-75 mx-auto">
   
    <thead>
        <tr>
            <th>No</th>
            <th>Category No</th>
            <th>Name</th>
            <th>Active</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = (current - 1) * pageSize + 1;
        }
        @foreach (var item in categories)
        {
            <tr>
                <td>@index</td>
                <td>@item.CategoryNo</td>
                <td>@item.CategoryName</td>
                <td>
                    @if (item.Active)
                    {
                        <span class="badge bg-primary">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.CategoryID"
                       class="btn btn-sm btn-outline-primary">
                        Edit
                    </a>
                    <button type="button"
                            class="btn btn-sm btn-outline-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteModal"
                            data-id="@item.CategoryID"
                            data-name="@item.CategoryName">
                        Delete
                    </button>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>

<!-- pagination -->
<nav aria-label="Category list pagination d-flex justify-content-center mx-auto">
    <ul class="pagination w-100 justify-content-center">
        <li class="page-item @(current == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(current - 1)"
               tabindex="-1">
                Previous
            </a>
        </li>

        @for (var p = 1; p <= totalPages; p++)
        {
            <li class="page-item @(p == current ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@p">
                    @p
                </a>
            </li>
        }

        <li class="page-item @(current == totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(current + 1)">
                Next
            </a>
        </li>
    </ul>
</nav>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1"
     aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteForm" method="post" asp-action="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete category
                        <strong id="catName"></strong>?
                    </p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="catId" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        Yes, Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id     = button.getAttribute('data-id');
            var name   = button.getAttribute('data-name');

            document.getElementById('catId').value     = id;
            document.getElementById('catName').textContent = name;
        });
    </script>
}
